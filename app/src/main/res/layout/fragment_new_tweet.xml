<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/ptTweetText"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:gravity="top"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="@string/what_is_happening"
        android:layout_below="@+id/ibCancel"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/tweetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/rounded_button"
        android:text="@string/tweet"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/ptTweetText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/etCharacterCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tweetBtn"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="14dp"
        android:layout_toStartOf="@+id/tweetBtn"
        android:text="@string/oneforty"
        android:layout_marginBottom="25dp"
        android:textColor="@color/colorBlack" />

    <ImageButton
        android:id="@+id/ibCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorWhite"
        app:srcCompat="@drawable/ic_action_cancel" />
</RelativeLayout>